{{!
    @template paygw_zarinpal/method

    Context variables required for this template:
    * payable - The formatted amount
    * description - what the user paying for
    * paymenturl - gateway url to go

    Example context (json):
    {
        "image": "http://url",
        "payable": "The formatted amount",
        "description": "for enrolment in course",
        "paymenturl": "http://url"
    }

}}

<div class="cost-display">
    <div style="text-align: center;">
        <p>{{payable}}</p>
        <p>{{description}}</p>
        <br>
        <img class="mb-4" src="{{{image}}}" alt="zarinpal" height="40">
        <br>
        <a class="btn btn-primary" target="_self" href="{{paymenturl}}">{{# str }} enter_gateway, paygw_zarinpal {{/ str}}</a>
    </div>
</div>
